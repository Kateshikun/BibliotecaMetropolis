@* @model indica que esta vista recibirá una colección de objetos Recurso para mostrar en la tabla. *@
@model IEnumerable<BibliotecaMetrópolis.Models.Recurso>
@{
    ViewData["Title"] = "Gestión de Adquisiciones";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Inventario de Materiales Adquiridos</h1>
        <p>
            @* Enlace para crear un nuevo recurso. Apunta a la acción Create del mismo controlador. *@
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Nueva Adquisición
            </a>
        </p>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Título</th>
                    <th>Tipo</th>
                    <th>Editorial</th>
                    <th class="text-center">Año</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @* Recorremos CADA recurso que el controlador nos envió en el Modelo. *@
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.titulo)</td>
                        <td>
                            @* Usamos la propiedad de navegación (cargada con .Include()) para ver el nombre. *@
                            @Html.DisplayFor(modelItem => item.IdTipoRNavigation.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdEditNavigation.Nombre)
                        </td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.annopublic)</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                @* asp-route-id pasa la clave primaria (IdRec) a la acción Details, Edit o Delete. *@
                                <a asp-action="Details" asp-route-id="@item.IdRecurso" class="btn btn-sm btn-info">Detalle</a>
                                <a asp-action="Edit" asp-route-id="@item.IdRecurso" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.IdRecurso" class="btn btn-sm btn-danger">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>