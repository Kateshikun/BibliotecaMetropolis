@model BibliotecaMetrópolis.Models.Adquisicion
@{
    ViewBag.Title = "Editar Adquisición";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-center">📝 Editar Adquisición</h2>

    @using (Html.BeginForm("Editar", "Adquisiciones", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)
        @Html.Partial("_FormularioAdquisicion", Model)
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-warning">Actualizar</button>
            <a href="@Url.Action("Index", "Adquisiciones")" class="btn btn-secondary">Cancelar</a>
        </div>
    }
</div>
