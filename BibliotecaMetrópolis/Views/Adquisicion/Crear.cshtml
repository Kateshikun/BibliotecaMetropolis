@*@model BibliotecaMetrópolis.Models.Adquisicion*@
@{
    ViewBag.Title = "Nueva Adquisición";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-center">➕ Nueva Adquisición</h2>

    @using (Html.BeginForm("Crear", "Adquisiciones", FormMethod.Post))
    {
        @Html.Partial("_FormularioAdquisicion", Model)
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a href="@Url.Action("Index", "Adquisiciones")" class="btn btn-secondary">Cancelar</a>
        </div>
    }
</div>

